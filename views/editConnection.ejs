<!DOCTYPE html>
<html lang="en">
<head>
  <title>Hangouts</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <% include ./links.ejs %>
</head>
<body>
    <div class="my-container">
        <% include ./header.ejs %>
        <div id="content-holder">
            <div class="align-top"></div>
            <div id="content">
                <h1>Edit Connection</h1>
                <form class="form-horizontal" action="/profile/editConnection" method='POST'>
                    <br>
                    <%if(errs.length > 0) { %>
                        <% errs.forEach(err => { %>
                           <h3 style="color:rgb(112,0,0)"> <%= err.msg %> </h3>                           
                        <% }) %>
                        <br>
                    <% } %>    
                    <input type="hidden" name="connectionId" value="<%= connection.connId %>">                                    
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="name">Name of Event</label>
                        <div class="col-sm-10">          
                           <input type="text" class="form-control" id="name" placeholder="Enter Name" value="<%= connection.title %>" name="name" required>
                        </div>
                        </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="details">Details</label>
                        <div class="col-sm-10">          
                            <textarea class="form-control" id="details" rows="10" placeholder="Enter the Description..." name="details" required><%= connection.details %></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="where">Where</label>
                        <div class="col-sm-10">          
                            <input type="text" class="form-control" id="where" placeholder="location" name="where" value="<%= connection.location %>" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="when">When</label>
                        <div class="col-sm-10">          
                            <input type="date" class="form-control" id="when" name="when" required>
                        </div>
                    </div>
                   <div class="form-group">      
                        <div class="col-sm-offset-9 col-sm-3">
                            <button type="submit" class="btn btn-primary btn-lg">Update Connection</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="align-bottom"></div>
        </div>
        <% include ./footer.ejs %>
    </div>
</body>
</html>